#include <stdio.h>

int main () {
    
    int n;
    
    printf("digite um numero inteiro:\n");
    scanf("%i", &n);
    
    if (n > 0) {
        printf("O número %d é positivo\n", n);
    }
    
    else if (n == 0) {
        printf("O número é nulo\n");
    }
    
    else {
        printf("O número %d é negativo\n", n);
    }
    
    return 0;
}
