#include <stdio.h>

int main () {
    
    float base;
    float altura;
    float area;
    
    printf("Cologue os dados do triangulo para saber sua area: \n");
    
    printf("Digite o valor da base: \n");
    scanf("%f", &base);
    
    printf("Digite o valor da altura: \n");
    scanf("%f", &altura);
    
    area = (base * altura) / 2;
    
    printf("A area do seu triangulo Ã©: %f\n", area);
    
    return 0;
}
