#include <stdio.h>

int main () {
    
    float raio;
    float area;
    const float pi = 3.14159265358979323846;
    
    printf("Coloque o valor do raio para saber a área da circunferência: \n");
    
    printf("Digite o raio: \n");
    scanf("%f", &raio);
    
    area = pi * raio * raio;
    
    printf("A área da circunferência é: %.2f\n", area);
    
    return 0;
}
