#include <stdio.h>

int main () {
    
    int numero;
    
    printf("digite um numero inteiro para saber se é par ou impar: \n");
    scanf("%i", &numero);
    
    if (numero % 2 == 0) {
        printf("O número é par \n");
    }
    
    else {
        printf("O número é impar \n");
    }
    
    return 0;
}
